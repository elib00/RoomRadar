<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:progressTint="#213395" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create Listing"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Images"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- First Image -->
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="143dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"
                android:contentDescription="Selected Image 1"
                android:scaleType="centerCrop"
                android:src="@drawable/UploadImage" />

            <Button
                android:id="@+id/btn_choose_photo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#0B1455"
                android:text="Choose Photo 1"
                android:textColor="#ffffff" />

            <!-- Second Image -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"
                android:contentDescription="Selected Image 2"
                android:scaleType="centerCrop"
                android:src="@drawable/UploadImage" />

            <Button
                android:id="@+id/btn_choose_photo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#0B1455"
                android:text="Choose Photo 2"
                android:textColor="#ffffff" />

            <!-- Third Image -->
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"
                android:contentDescription="Selected Image 3"
                android:scaleType="centerCrop"
                android:src="@drawable/UploadImage" />

            <Button
                android:id="@+id/btn_choose_photo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#0B1455"
                android:text="Choose Photo 3"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Add description"
                android:inputType="textMultiLine"
                android:minLines="3" />

            <EditText
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Add price"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#0B1455"
                android:text="Submit"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
